<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KonfirmasiApproval">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18dp"
                    android:textColor="#7868E6"
                    android:text="Kembali"
                    android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
                    android:drawableTint="#7868E6"
                    android:id="@+id/backMenu"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Judul Acara"
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_judul"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/defaultphoto"
                    android:id="@+id/imgUserPengaju"></de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp">
                    <TextView
                        android:id="@+id/tv_pengaju"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:text="Nama Pengaju"/>
                    <TextView
                        android:id="@+id/tv_penyelenggara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Nama Penyelenggara"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Tgl Ajuan"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/tv_tgl"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="14dp"
                android:background="@drawable/roundbox"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="Data Ajuan!"
                    android:layout_marginLeft="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="0"
                    android:background="@color/black"
                    android:layout_marginTop="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Id Pengajuan"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_idAjuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="AS01B20190"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Jenis Ajuan"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_jenisAjuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Uang Cair / Dana Cair"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Nominal"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_noMinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Keterangan"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
                <TextView
                    android:id="@+id/sts_Keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="-"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="28dp"
                android:background="#EDEEF7">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="Konfirmasi Approval!"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="14dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="0"
                    android:background="@color/black"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="28dp"/>

                <EditText
                    android:onClick="setDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Waktu Interview"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="14dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/roundbox"
                    android:backgroundTint="@color/white"
                    android:padding="14dp"
                    android:inputType="date"
                    android:id="@+id/et_TimeInterview"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/dark_50"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="14dp"
                    android:textSize="14dp"
                    android:text="Lokasi Interview"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat/ Link Meet / Link Zoom"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:maxHeight="150dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/roundbox"
                    android:backgroundTint="@color/white"
                    android:padding="14dp"
                    android:inputType="textMultiLine"
                    android:id="@+id/etlokasi"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btnsimpan"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btnSimpan"/>

            </LinearLayout>

</LinearLayout>