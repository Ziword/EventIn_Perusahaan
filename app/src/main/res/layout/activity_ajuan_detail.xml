<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AjuanDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18dp"
                    android:textColor="#7868E6"
                    android:text="Kembali"
                    android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
                    android:drawableTint="#7868E6"
                    android:id="@+id/backMenu1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Judul Acara"
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_judul"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/defaultphoto"
                    android:id="@+id/imgUserPengaju"></de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp">
                    <TextView
                        android:id="@+id/tv_pengaju"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:text="Nama Pengaju"/>
                    <TextView
                        android:id="@+id/tv_penyelenggara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Nama Penyelenggara"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Tgl Ajuan"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/tv_tgl"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="14dp"
                android:background="@drawable/roundbox"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="Status Ajuan!"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/tv_status"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="0"
                    android:background="@color/black"
                    android:layout_marginTop="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Id Pengajuan"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_idAjuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="AS01B20190"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="No Hp. Utama"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_noHp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="0822-2222-2222"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="No Hp. Alternatif"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_noHp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="0822-2222-2222"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Lokasi Acara"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
                <TextView
                    android:id="@+id/sts_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Royal Plaza UG - Jl. A. Yani No.16-18, Wonokromo, Kec. Wonokromo, Kota SBY, Jawa Timur 60243"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Tgl Acara"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_tglAcara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="27 Mei 2021  s/d 29 Mei 2021"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Jenis Ajuan"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_jenisAjuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Uang Cair / Dana Cair"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Nominal"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"/>
                    <TextView
                        android:id="@+id/sts_noMinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Keterangan"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
                <TextView
                    android:id="@+id/sts_Keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="-"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/roundbox"
                android:padding="14dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="14dp"
                android:id="@+id/layProp">

                <TextView
                    android:id="@+id/sts_DownloadFile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Proposal_AS01B20190.pdf"
                    android:drawableRight="@drawable/ic_baseline_cloud_download_24"
                    android:drawableLeft="@drawable/ic_baseline_picture_as_pdf_24"
                    android:drawablePadding="14dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnAcc"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btnapprove"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/btnReject"
                android:layout_marginHorizontal="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btntolak"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>